<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowDoBradesco.MainPage"
             Shell.NavBarIsVisible="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="tela_de_fundo.png"
               Aspect="Center"/>

        <Button Text="Começar"
                TextColor="#e5173f"
                Grid.Row="1"
                BackgroundColor="Transparent"
                BorderColor="#e5173f"
                BorderWidth="2"
                Clicked="BotaoComecar"
                WidthRequest="300"
                HeightRequest="50"
                Margin="20,10"/>
    </Grid>
</ContentPage>
